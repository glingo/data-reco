<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
  <class name="net.ar.webonswing.petstore.model.Product" >
    <id name="id" >
      <generator class="native" />
    </id>

    <property name="productId" />
    <property name="description" length="255" />

    <set name="items" lazy="false" cascade="all" order-by="id asc">
      <key column="product" >
      </key>
      <one-to-many class="net.ar.webonswing.petstore.model.Item" />
    </set>

    <property name="name" length="50" />
  </class>
</hibernate-mapping>