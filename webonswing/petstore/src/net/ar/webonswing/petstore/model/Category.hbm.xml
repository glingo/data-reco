<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class name="net.ar.webonswing.petstore.model.Category" >
    <id name="id" >
      <generator class="native" />
    </id>
    
    <property name="description" length="255" />
    <property name="name" length="50" />
    
    <set name="products" cascade="all" lazy="false" order-by="id asc">
      <key column="category_fk" >
      </key>
      <one-to-many class="net.ar.webonswing.petstore.model.Product" />
    </set>
  </class>

</hibernate-mapping>
