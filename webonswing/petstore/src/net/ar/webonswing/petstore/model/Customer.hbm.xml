<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
  
  <class name="net.ar.webonswing.petstore.model.Customer" >
    <id name="id">
      <generator class="native" />
    </id>
    
    <component name="address" class="net.ar.webonswing.petstore.model.Address" >
      <property name="city" />
      <property name="country" />
      <property name="state" />
      <property name="street1" />
      <property name="street2" />
      <property name="zipcode" />
    </component>
    
    <component name="creditCard" class="net.ar.webonswing.petstore.model.CreditCard" >
      <property name="expiryDate" />
      <property name="number" />
      <property name="type" />
    </component>
    
    <property name="email" />
    <property name="firstname" />
    <property name="language" />
    <property name="lastname" />
    <property name="telephone" />
    <property name="password" length="10" not-null="true" />
    <property name="username" length="10" not-null="true" />
  </class>

</hibernate-mapping>