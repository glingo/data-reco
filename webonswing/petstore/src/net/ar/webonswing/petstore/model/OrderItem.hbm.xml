<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
  <class name="net.ar.webonswing.petstore.model.OrderItem" >

    <id name="id" >
      <generator class="native">
      </generator>
    </id>
    
    <many-to-one name="item" class="net.ar.webonswing.petstore.model.Item" cascade="none" outer-join="auto" />
    <property name="quantity" />
    <property name="unitPrice" />
    
  </class>
</hibernate-mapping>