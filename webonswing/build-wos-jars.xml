<project basedir="." default="build-wos-jars" name="WebOnSwing">

  <target description="Initialize environment" name="project_init">
    <property name="project.directory" value="webonswing"/>
    <property name="project.name" value="WebOnSwing"/>
    <property name="wosproject.name" value="WebOnSwing"/>
  </target>

  <target name="usage" depends="init">
    <echo message=""/>
    <echo message="WebOnSwing build file"/>
    <echo message="-------------------------------------------------------------"/>
    <echo message=" Available targets are:"/>
    <echo message="   all   --> Cleans then builds everything (default)"/>
    <echo message="   clean --> Cleans all build directories"/>
    <echo message="   pack  --> Generates the jar and war files"/>
    <echo message="   usage --> This info"/>
    <echo message="-------------------------------------------------------------"/>
    <echo message=""/>
  </target>
  
  <target name="create-main-jar" >
    <jar basedir="build/webonswing/bin" jarfile="build/jars/${project.name}.jar">
      <include name="net/ar/webonswing/**" />
      <exclude name="net/ar/webonswing/toolkit/**" />
      <manifest>
        <attribute name="Built-By" value="${build-by}"/>
      </manifest>
    </jar>
  </target>

  <target name="create-boot-jar" >
    <jar basedir="build/webonswing/bin" jarfile="build/jars/${project.name}Boot.jar">
      <exclude name="**/*.jar" />
      <exclude name="**/*.java" />
      <include name="net/ar/webonswing/toolkit/**" />
      <manifest>
        <attribute name="Built-By" value="${build-by}"/>
      </manifest>
    </jar>
  </target>
  
  <target name="build-wos-jars" depends="compile-wos-project,create-main-jar,create-boot-jar" />
  
</project>
